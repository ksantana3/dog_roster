html
  head
    meta(charset="utf-8")
    title Dogs
    link(rel="stylesheet" href="style.css")
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js")
  body
    
    .container

      h1 Update #{dog.name}

      br


      form(action="/update/"+dog._id method="post")
        .form-group
          label(for='name') Name:
          input#name.form-control(type='text', placeholder='Please enter dogs name' name='name' value=dog.name)
        .form-group
          label(for='breed') Breed:
          input#breed.form-control(type='text', placeholder='Please enter breed name' name='breed' value=dog.breed)
        .form-group
          label(for='age') Age:
          input#age.form-control(type='number', placeholder='Please enter dogs age' name='age' value=dog.age)
        .form-group
          button.btn.btn-primary(type='submit') Submit